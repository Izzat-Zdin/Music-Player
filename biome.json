{
	"$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"build",
			".generated",
			"**/*.DS_Store",
			".env",
			".env.*",
			"pnpm-lock.yaml",
			"./src/paraglide",
			"**/*.html",
			"**/*.svg",
			"**/*.svelte"
		]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useSimplifiedLogicExpression": "error"
			},
			"style": {
				"noNegationElse": "error",
				"useBlockStatements": "error",
				"useCollapsedElseIf": "error",
				"useShorthandArrayType": "error",
				"useShorthandAssign": "error"
			},
			"suspicious": {
				"noMisrefactoredShorthandAssign": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"indentWidth": 4
		}
	},
	"json": {
		"formatter": {
			"indentWidth": 2
		}
	}
}
